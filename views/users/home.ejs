<% include('../layouts/header.ejs') %>

<h1>Welcome, <%= user.name %></h1>

<table width="50%">
  <tr>
    <td>
      <img
        src="userImages/<%=user.image%>"
        width="100px"
        height="100px"
        alt="<%=user.image%>"
      />
    </td>
  </tr>
  <tr>
    <td>email</td>
    <td><%=user.email%></td>
  </tr>
  <tr>
    <td>Mobile</td>
    <td><%=user.mobile%></td>
  </tr>
  <tr>
    <td>verified</td>
    <td>
      <% if(user.is_verified == 1) { %>
      <p>✅</p>
      <% }else{ %>
      <p>❌</p>
      <% } %>
    </td>
  </tr>
</table>

<a href="/logout">Logout</a>
<% include('../layouts/footer.ejs') %>
