<%- include('../layouts/header.ejs') %>

<div class="verification-container">
  <div class="verification-icon">
    <i class="fas fa-envelope"></i>
  </div>
  <h1>Email Verification</h1>
  <p class="verification-text">
    Enter your email address to receive a verification link. Please check your
    inbox after submitting.
  </p>

  <% if(typeof message !== 'undefined'){ %>
  <div
    class="alert-message <%= typeof messageType !== 'undefined' ? messageType : '' %>"
  >
    <%= message %>
  </div>
  <% } %>

  <form action="/verification" method="post">
    <div class="form-group">
      <input
        type="email"
        name="email"
        class="form-input"
        placeholder="Enter your email address"
        required
        autocomplete="email"
      />
    </div>

    <button type="submit" class="submit-btn">
      <i class="fas fa-paper-plane"></i> Send Verification Link
    </button>
  </form>
</div>

<%- include('../layouts/footer.ejs') %>
