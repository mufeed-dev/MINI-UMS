<% include('../layouts/header.ejs') %>

<h1>Edit User</h1>

<form action="" method="post">
  <input
    type="name"
    name="name"
    placeholder="Enter Name"
    required
    value="<%= users.name %>"
  /><br /><br />
  <input
    type="email"
    name="email"
    placeholder="Enter Email"
    required
    value="<%= users.email %>"
  />
  <br /><br />
  <input
    type="text"
    name="mobile"
    placeholder="Enter Mobile"
    required
    value="<%= users.mobile %>"
  />
  <br /><br />
  <label>Verified</label>
  <input type="radio" name="verify" value="1" <% if(users.is_verified
  ==1){%>checked<% }%>/>
  <label>Unverified</label>
  <input type="radio" name="verify" value="0" <% if(users.is_verified
  ==0){%>checked<% }%>/><br />
  <input type="hidden" name="id" value="<%= users._id %>" />
  <input type="submit" value="Update" />
</form>

<a href="/admin/dashboard">Go Dashboard</a>

<% include('../layouts/footer.ejs') %>
