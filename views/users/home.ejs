<%-include('../layouts/header.ejs') %>

<div class="user-home-page">
  <div class="profile-container">
    <div class="profile-header">
      <h1>Welcome, <%= user.name %></h1>
      <img
        src="/userImages/<%=user.image%>"
        onerror="this.src='/images/default-profile.png'"
        class="profile-image"
        alt="Profile Picture"
      />
    </div>

    <table class="profile-table">
      <tr>
        <td>Email</td>
        <td><%= user.email %></td>
      </tr>
      <tr>
        <td>Mobile</td>
        <td><%= user.mobile %></td>
      </tr>
      <tr>
        <td>Verification Status</td>
        <td>
          <% if(user.is_verified == 1) { %>
          <span class="verification-status verified">✅ Verified</span>
          <% } else { %>
          <span class="verification-status not-verified">❌ Not Verified</span>
          <% } %>
        </td>
      </tr>
    </table>

    <div class="action-links">
      <a href="/edit?id=<%=user._id%>" class="action-link edit-link"
        >Edit Profile</a
      >
      <a href="/logout" class="action-link logout-link">Logout</a>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
